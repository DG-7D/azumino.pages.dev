---
import { getCollection, getEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
export async function getStaticPaths() {
    const blogEntries = await getCollection("blog", ({ data }) => {
        return data.publish;
    });
    return blogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

function to年月日(date: Date): string {
    const iso: string = date.toISOString();
    return `${iso.substring(0, 4)}年${iso.substring(5, 7)}月${iso.substring(8, 10)}日`;
}
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
    <time datetime={entry.data.publishDate.toISOString().substring(0, 10)}>{to年月日(entry.data.publishDate)}</time>
    <!-- {entry.data.lastUpdateDate ? <> (最終更新: <time>{to年月日(publishDate)}</time>)</> : ""} -->
    <Content />
</BaseLayout>
