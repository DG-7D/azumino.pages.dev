---
import BaseLayout from "./BaseLayout.astro";

interface Props {
    frontmatter: {
        title: string;
        publishDate: string;
        summaryLargeImage?: boolean;
        ogImage?: string;
        description: string;
    };
}
const fm = Astro.props.frontmatter;
const pd = new Date(fm.publishDate);
function to年月日(date: Date): string {
    const iso: string = date.toISOString();
    return `${iso.substring(0, 4)}年${iso.substring(5, 7)}月${iso.substring(8, 10)}日`;
}
---

<BaseLayout title={fm.title} summaryLargeImage={fm.summaryLargeImage} ogImage={fm.ogImage} description={fm.description}>
    <time datetime={pd.toISOString().substring(0, 10)}>{to年月日(pd)}</time>
    <slot />
</BaseLayout>
