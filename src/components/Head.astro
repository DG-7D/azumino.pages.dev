---
import { SEO } from "astro-seo";
const siteName = "あづみのメモ帳";

interface Props {
    title: string;
    summaryLargeImage?: boolean;
    ogImage?: string;
    description: string;
}
---

<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO
        title={Astro.props.title}
        titleTemplate={`%s  – ${siteName}`}
        titleDefault={siteName}
        description={Astro.props.description}
        charset="UTF-8"
        openGraph={{
            basic: {
                title: Astro.props.title == "" ? siteName : Astro.props.title,
                type: "website",
                image: new URL(Astro.props.ogImage ?? "ogp-default.jpg", Astro.url.origin).toString(),
            },
            optional: {
                description: Astro.props.description,
                locale: "ja_JP",
                siteName: siteName,
            },
        }}
        twitter={{
            card: Astro.props.summaryLargeImage ? "summary_large_image" : "summary",
            site: "@DG_7D",
            creator: "@DG_7D",
        }}
    />
    <slot />
</head>
