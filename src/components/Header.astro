---
import "@/styles/style.scss";
import HeaderLogo from "./HeaderLogo.astro";

interface Props {
    siteName: string;
}

const { siteName } = Astro.props;
---

<header>
    <a href="/">
        <HeaderLogo />
    </a>
    <!-- <button style="width: 1rem; height: 1rem;"></button> -->
</header>
<style lang="scss">
    $logo-height: 2rem;
    $padding: 0.25rem;
    :root {
        --header-height: #{$logo-height + 2 * $padding};
    }
    header {
        position: sticky;
        top: 0;
        z-index: 1645;
        padding: $padding;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--theme-color);
        box-shadow: 0 0 0.5rem 0.25rem var(--background-color);
        a {
            line-height: 0;
            :global(svg) {
                height: $logo-height;
            }
        }
        button {
            position: absolute;
            right: 1rem;
        }
    }
</style>
