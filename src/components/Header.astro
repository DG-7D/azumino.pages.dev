---
import "@/styles/style.scss";

interface Props {
    siteName: string;
}

const { siteName } = Astro.props;
---

<header>
    <!-- <div></div> -->
    <a href="/">
        {siteName}
    </a>
    <nav>
        <ul>
            <li><a href="/">トップ</a></li>
            <li><a href="/blog/">ブログ</a></li>
            <li><a href="/about/">自己紹介</a></li>
        </ul>
    </nav>
    <!-- <button style="width: 1rem; height: 1rem;"></button> -->
</header>
<style lang="scss">
    $font-size: 2rem;
    $padding: 0.25rem;
    :root {
        --header-height: #{$font-size + 2 * $padding};
    }
    header {
        position: sticky;
        top: 0;
        z-index: 1645;
        padding: $padding;
        display: flex;
        justify-content: space-evenly;
        align-items: flex-end;
        background-color: var(--theme-color);
        box-shadow: 0 0 0.5rem 0.25rem var(--background-color);
        // > * {
        //     flex: 1 1 0;
        // }
        // > div {
        //     @media (width < 650px) {
        //         display: none;
        //     }
        // }
        > a {
            color: var(--bwhite);
            font-size: $font-size;
            text-align: center;
        }
        > nav {
            ul {
                display: flex;
                justify-content: center;
                align-items: center;
                li {
                    padding: 0.25rem;
                    margin: 0;
                    a {
                        color: var(--bwhite);
                    }
                }
            }
        }
        > button {
            position: absolute;
            right: 1rem;
        }
    }
</style>
